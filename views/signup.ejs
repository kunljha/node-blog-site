<%- include('./partials/head'); -%> <%- include("./partials/nav.ejs") %>

<form>
	<h2>Sign up</h2>
	<label for="username">Username</label>
	<input type="text" name="username" placeholder="Enter username.." required />
	<div class="name error"></div>
	<label for="email">Email</label>
	<input type="text" name="email" placeholder="Enter email.." required />
	<div class="email error"></div>
	<label for="password">Password</label>
	<input
		type="password"
		name="password"
		placeholder="Enter password.."
		required
	/>
	<div class="password error"></div>
	<button>Sign up</button>
</form>

<script>
	const form = document.querySelector('form')
	const usernameError = document.querySelector('.name.error')
	const emailError = document.querySelector('.email.error')
	const passwordError = document.querySelector('.password.error')

	form.addEventListener('submit', async (e) => {
		e.preventDefault()

		// clearing error fields
		usernameError.textContent = ''
		emailError.textContent = ''
		passwordError.textContent = ''

		// showing message for email
		const message = document.createElement('div')

		// reading text input values from form
		const username = e.target.elements.username.value
		const email = e.target.elements.email.value
		const password = e.target.elements.password.value

		try {
			const res = await fetch('/signup', {
				method: 'POST',
				body: JSON.stringify({ username, email, password }),
				headers: { 'Content-Type': 'application/json' },
			})
			const data = await res.json()
			// console.log(data)

			if (data.errors) {
				usernameError.textContent = data.errors.username
				emailError.textContent = data.errors.email
				passwordError.textContent = data.errors.password
				message.textContent = ''
			}

			if (data.userId) {
				// console.log(data.userId)
				message.textContent = 'An email is sent to you'
			}

			message.classList.add('error')
			form.appendChild(message)
		} catch (err) {
			console.log(err)
		}
	})
</script>

